*
	box-sizing border-box

html, button, input, select, textarea, .pure-g [class *= "pure-u"]
	font-family 'Raleway', sans-serif
	letter-spacing 1px

body
	background grayLight
	color black
	font-size 15px
	line-height 1.5em

a
	color inherit
	text-decoration none

.button-error, .button-secondary, .button-success, .button-warning
	color white

.button-error
	background red

.button-secondary
	background blue

.button-secondary
	background blueLight

.button-success
	background green

.button-warning
	background orange

.container
	margin 0 auto
	max-width 960px
	padding 10px

.image-container
	margin 10px auto
	max-width 250px

.to-right
	text-align right