*
	box-sizing border-box

html, button, input, select, textarea, .pure-g [class *= "pure-u"]
	font-family 'Raleway', sans-serif
	letter-spacing 1px

body
	background grayLight
	color black
	font-size 15px
	line-height 1.5em

a
	color inherit
	text-decoration none

	.label
		cursor pointer

.button-error, .button-secondary, .button-success, .button-warning
	color white

.button-error
	background red

.button-secondary
	background blueLight

.button-success
	background green

.button-warning
	background orange

.container
	margin 0 auto
	max-width 960px
	padding 10px

.image-container
	margin 10px auto
	max-width 250px

.label
	border 1px solid gray
	border-radius 5px
	color white
	display inline-block
	font-weight bold
	margin 0 5px
	padding 5px 10px 4px
	text-shadow 1px 1px 1px rgba(0, 0, 0, .15)
	transition all .1s ease
	vertical-align top

	&last-child
		margin 0

	&.ability
		background yellowLight
		border 1px solid yellow
		margin-bottom 10px
		text-shadow 1px 1px 1px rgba(0, 0, 0, .25)

		&:hover
			background: darken(yellowLight, 25%)

