.pokemon-header
	border-top-left-radius 5px
	border-top-right-radius 5px
	padding 10px

	.title
		border-bottom 1px solid gray
		padding-bottom 10px

		*
			margin 0

		p
			color gray

		h2
			font-size 1.25em

		.number
			background redLight
			border 1px solid red
			border-radius 5px
			color white
			display inline-block
			font-size 1.5em
			padding 5px 10px
			vertical-align top

	.types
		padding-top 10px
		text-align center